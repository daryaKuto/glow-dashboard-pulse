{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    // TypeScript Strictness - Enable incrementally
    // Phase 1: strictNullChecks (enabled 2026-01-05)
    // Phase 2: noImplicitAny (pending)
    // Phase 3: noUnusedLocals + noUnusedParameters (pending)
    "strictNullChecks": true,
    "noImplicitAny": false,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "skipLibCheck": true,
    "allowJs": true
  }
}
